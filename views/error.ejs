<% layout('layouts/boilerplate.ejs') %>

<div class="container mt-5 mb-5 d-flex justify-content-center align-items-center" style="min-height:60vh;">
  <div class="error-box p-5 w-100" style="max-width: 480px;">
    <div class="mb-4">
      <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3.5rem;"></i>
    </div>
    <h1 class="display-4 mb-3">Error <%= err.statusCode || 500 %></h1>
    <p class="lead mb-4"><%= err.message || 'Something went wrong.' %></p>
    <a href="/listings" class="btn btn-primary btn-lg px-4 py-2">Back to Listings</a>
  </div>
</div>

<style>
.error-box {
  background: linear-gradient(135deg, #f8fafc 0%, #e3e6ed 100%);
  border-radius: 22px;
  box-shadow: 0 8px 32px rgba(60,60,90,0.10);
  text-align: center;
}
.error-box .display-4 {
  font-weight: 800;
  color: #dc3545;
  letter-spacing: 1px;
}
.error-box .lead {
  color: #495057;
  font-size: 1.18rem;
}
.error-box .btn-primary {
  background: linear-gradient(90deg, #0d6efd 60%, #4f8cff 100%);
  border: none;
  font-weight: 700;
  border-radius: 12px;
  font-size: 1.1rem;
  box-shadow: 0 2px 8px rgba(13,110,253,0.10);
  transition: background 0.2s, box-shadow 0.2s;
}
.error-box .btn-primary:hover {
  background: linear-gradient(90deg, #4f8cff 0%, #0d6efd 100%);
  box-shadow: 0 4px 16px rgba(13,110,253,0.18);
}
</style> 