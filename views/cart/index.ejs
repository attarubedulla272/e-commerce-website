<% layout("layouts/boilerplate.ejs") -%>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-heart me-2"></i>My Wishlist</h2>
        <% if (wishlistItems && wishlistItems.length > 0) { %>
          <form method="POST" action="/cart/clear?_method=DELETE" class="d-inline">
            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Clear entire wishlist?')">
              <i class="fas fa-trash me-2"></i>Clear All
            </button>
          </form>
        <% } %>
      </div>
      
      <% if (!wishlistItems || wishlistItems.length === 0) { %>
        <div class="text-center py-5">
          <i class="fas fa-heart text-muted" style="font-size: 4rem;"></i>
          <h4 class="mt-3 text-muted">Your wishlist is empty</h4>
          <p class="text-muted">Start adding items to your wishlist to see them here!</p>
          <a href="/listings" class="btn btn-primary">
            <i class="fas fa-shopping-cart me-2"></i>Browse Products
          </a>
        </div>
      <% } else { %>
        <div class="row g-4">
          <% wishlistItems.forEach(item => { %>
            <div class="col-md-6 col-lg-4">
              <div class="card h-100 border-0 shadow-sm">
                <div class="position-relative">
                  <% if (item.image) { %>
                    <img src="<%= item.image %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="<%= item.name %>">
                  <% } else { %>
                    <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" style="height: 200px; object-fit: cover;" alt="No Image">
                  <% } %>
                  
                  <!-- Remove button -->
                  <form method="POST" action="/cart/remove/<%= item.productId %>?_method=DELETE" class="position-absolute top-0 end-0 m-2">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Remove from wishlist?')">
                      <i class="fas fa-times"></i>
                    </button>
                  </form>
                  
                  <!-- Stock badge -->
                  <% if (item.product && item.product.stock > 0) { %>
                    <span class="badge bg-success position-absolute top-0 start-0 m-2">In Stock</span>
                  <% } else { %>
                    <span class="badge bg-danger position-absolute top-0 start-0 m-2">Out of Stock</span>
                  <% } %>
                </div>
                
                <div class="card-body d-flex flex-column">
                  <h6 class="card-title"><%= item.name %></h6>
                  
                  <% if (item.brand) { %>
                    <p class="text-muted small mb-2">Brand: <%= item.brand %></p>
                  <% } %>
                  
                  <p class="card-text small text-muted mb-3">
                    <%= item.description && item.description.length > 100 ? item.description.substring(0, 100) + '...' : item.description %>
                  </p>
                  
                  <!-- Pricing -->
                  <div class="mb-3">
                    <% if (item.originalPrice > item.price) { %>
                      <span class="text-muted text-decoration-line-through">₹<%= item.originalPrice.toLocaleString("en-IN") %></span>
                      <span class="h5 text-danger ms-2">₹<%= item.price.toLocaleString("en-IN") %></span>
                      <span class="badge bg-success ms-2">
                        <%= Math.round(((item.originalPrice - item.price) / item.originalPrice) * 100) %>% OFF
                      </span>
                    <% } else { %>
                      <span class="h5 text-danger">₹<%= item.price.toLocaleString("en-IN") %></span>
                    <% } %>
                  </div>
                  
                  <!-- Action buttons -->
                  <div class="mt-auto">
                    <% if (item.product && item.product.stock > 0) { %>
                      <form method="POST" action="/cart/buy/<%= item.productId %>" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm me-2">
                          <i class="fas fa-shopping-cart me-1"></i>Buy Now
                        </button>
                      </form>
                    <% } else { %>
                      <button class="btn btn-secondary btn-sm me-2" disabled>
                        <i class="fas fa-times-circle me-1"></i>Out of Stock
                      </button>
                    <% } %>
                    
                    <a href="/listings/<%= item.productId %>" class="btn btn-outline-primary btn-sm">
                      <i class="fas fa-eye me-1"></i>View Details
                    </a>
                  </div>
                </div>
                
                <div class="card-footer bg-transparent">
                  <small class="text-muted">
                    <i class="fas fa-clock me-1"></i>
                    Added on <%= new Date(item.addedAt).toLocaleDateString() %>
                  </small>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
        
        <!-- Summary -->
        <div class="row mt-4">
          <div class="col-md-6">
            <div class="card border-0 bg-light">
              <div class="card-body">
                <h6 class="card-title">Wishlist Summary</h6>
                <p class="mb-2">Total Items: <strong><%= wishlistItems.length %></strong></p>
                <p class="mb-2">In Stock: <strong><%= wishlistItems.filter(item => item.product && item.product.stock > 0).length %></strong></p>
                <p class="mb-0">Out of Stock: <strong><%= wishlistItems.filter(item => !item.product || item.product.stock <= 0).length %></strong></p>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script>
// Function to update wishlist count after removing items
async function updateWishlistCountAfterRemove() {
  try {
    const response = await fetch('/cart/count');
    if (response.ok) {
      const data = await response.json();
      const countElement = document.getElementById('wishlist-count');
      if (countElement) {
        countElement.textContent = data.count;
        
        // Add animation for removed item
        countElement.style.transform = 'scale(0.8)';
          countElement.style.transform = 'scale(1)';
      }
    }
  } catch (error) {
    console.error('Error updating wishlist count:', error);
  }
}

// Add event listeners to remove forms
document.addEventListener('DOMContentLoaded', function() {
  const removeForms = document.querySelectorAll('form[action*="/cart/remove/"]');
  removeForms.forEach(form => {
    form.addEventListener('submit', function() {
      // Update count immediately after form submission
      updateWishlistCountAfterRemove();
    });
  });
  
  // Also listen for clear all form
  const clearForm = document.querySelector('form[action="/cart/clear"]');
  if (clearForm) {
    clearForm.addEventListener('submit', function() {
      updateWishlistCountAfterRemove();
    });
  }
});
</script> 